@model CinemaWrld.Application.Areas.Making.Models.Movies.ViewModels.MoviesViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    <a class="btn btn-warning " asp-action="Index"><--</a>
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CinemaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CinemaName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAgeRestricted)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsAgeRestricted)
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PremiereDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PremiereDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastProjectionDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.LastProjectionDate.HasValue)
            {
                @Html.DisplayFor(model => model.LastProjectionDate)
            }
            else
            {
                <span>Not set</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Description is null)
            {
                <span>No description</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Description)
            }

        </dd>

    </dl>
</div>
<div>



    @if (this.User.IsInRole(RolesConstants.USER_ROLE_NAME) || this.User.IsInRole(RolesConstants.ADMIN_ROLE_NAME))
    {

        <a class="btn bg-primary text-white" asp-action="Update" asp-route-id="@Model.Id">Update</a>


    }
    @if (this.User.IsInRole(RolesConstants.ADMIN_ROLE_NAME))
    {
    <span>|</span>
    <a class="btn bg-danger text-white" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }


</div>
