@model IEnumerable<CinemaWrld.Application.Areas.Making.Models.Directors.ViewModels.GetAllDirectorsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Directors</h1>


@if (this.User.IsInRole(RolesConstants.USER_ROLE_NAME) || this.User.IsInRole(RolesConstants.ADMIN_ROLE_NAME))
{
<div>
    <a class="btn btn-outline-dark " asp-action="Create">Create director</a>
</div>
}

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDirecting)
            </th>
            <th>Links</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieDirecting)
                </td>
                <td>

                    <a class="bg-info btn text-white" asp-action="Details" asp-route-id="@item.Id">Details</a>

                    @if (this.User.IsInRole(RolesConstants.USER_ROLE_NAME) || this.User.IsInRole(RolesConstants.ADMIN_ROLE_NAME))
                    {
                        <span>|</span>
                        <a class="btn bg-primary text-white" asp-action="Update" asp-route-id="@item.Id">Update</a>

                    }

                    @if (this.User.IsInRole(RolesConstants.ADMIN_ROLE_NAME))
                    {
                        <span>|</span>
                        <a class="btn bg-danger text-white" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
