@model IEnumerable<CinemaWrld.Application.Areas.Making.Models.Actors.ViewModels.GetAllActorsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayingAs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayingAs)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                @if (this.User.Identity.IsAuthenticated)
                {
                    <span>|</span>
                    <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>



                }

            </td>
        </tr>
}
    </tbody>
</table>
